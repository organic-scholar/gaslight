{
  "name": "@gaslight/graphql-import",
  "version": "0.0.1",
  "engines": {
    "node": ">=4.0.0"
  },
  "license": "MIT",
  "repository": "git@github.com:graphcool/graphql-import.git",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "typescript": {
    "definition": "lib/index.d.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "rm -rf lib && tsc -d",
    "testlocal": "ava-ts -u --verbose src/**/*.test.ts",
    "test-only": "npm run build && ava-ts --verbose src/**/*.test.ts --tap | tap-xunit > ~/reports/ava.xml",
    "test": "npm run test-only",
    "docs": "typedoc --out docs src/index.ts --hideGenerator --exclude **/*.test.ts",
    "docs:publish": "cp ./now.json ./docs && cd docs && now --public -f && now alias && now rm --yes --safe graphql-import & cd .."
  },
  "peerDependencies": {
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0"
  },
  "devDependencies": {
    "@types/graphql": "14.2.3",
    "@types/lodash": "4.14.136",
    "@types/node": "9.6.51",
    "@types/node-fetch": "^2.5.0",
    "@types/resolve-from": "0.0.18",
    "ava": "0.25.0",
    "ava-ts": "0.25.2",
    "graphql": "14.5.3",
    "nyc": "11.9.0",
    "tap-xunit": "2.4.1",
    "ts-node": "7.0.1",
    "typedoc": "0.14.2",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "node-fetch": "^2.6.0",
    "resolve-from": "^4.0.0"
  }
}
